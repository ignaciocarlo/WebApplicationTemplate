@page
@model WebApplicationTemplate.Areas.Project.Pages.IndexModel

@{
    ViewData["Title"] = "Project List";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table id="project" class="table table-sm table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Project Description</th>
        </tr>
    </thead>
</table>

@section Scripts
{
   <partial name="_Scripts" />

    <script>
        $(document).ready(function () {
                $('#project').DataTable({
                    ordering: true,
                    paging: true,
                    searching: true,
                    select: false,
                    ajax: {
                    url: '?handler=ListAll',
                        type: "POST",
                        processing: true,
                        serverSide: true,
                        headers: {
                            RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                        },
                    },
                    columns: [
                        { data: 'projectName', name: 'ProjectName' },
                        { data: 'projectDescription', name: 'ProjectDescription' },
                    ]
                });
            });
    </script>
}

@page
@model IndexModel

@{
    ViewData["Title"] = "Project List";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<!-- Sample Search Filter -->
<form>
    <p>
        Project Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ProjectDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Project)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectDescription)
                </td>
                <td>
                    <a asp-page="/Project/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Project/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Project/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
